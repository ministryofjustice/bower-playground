# http://editorconfig.org

root = true

[*]
    charset = utf-8
    end_of_line = lf
    indent_style = space
    insert_final_newline = true
    trim_trailing_whitespace = true

[*.py]
    indent_size = 4

[*.{js,rb,scss,html,jinja,slim,haml}]
    indent_size = 2

[*.md]
    trim_trailing_whitespace = false

[Makefile]
    indent_style = tab
